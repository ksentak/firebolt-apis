                "schema": {
                    "type": "array",
                    "items": {
                        "$ref": "https://meta.comcast.com/firebolt/schemas/media#/definitions/AudioMode"
                    }
                }
            },
            "examples": [
                {
                    "name": "Default Example",
                    "params": [],
                    "result": {
                        "name": "Default Result",
                        "value": [
                            "passthrough",
                            "stereo",
                            "surround"
                        ]
                    }
                }
            ]
        },
        {
            "name": "videoModes",
            "summary": "The video output modes commonly supported by the device and its connected video peripherals.",
